<?xsd version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:element name="consolas">
    <xs:complexType>
        <xs:sequence>
            <xs:element name="plataforma">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="nombre" type="xs:string"/>
                        <xs:element name="version" type="xs:integer"/>
                        <xs:element name="juegos">
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="accion">
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/> 
                                            </xs:sequence>
                                        </xs:complexType>                                      
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>

                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="rol">
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/>
                                            </xs:sequence>
                                        </xs:complexType> 
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>

                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="arcade">
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/>
                                                <xs:element name="nombre" type="xs:string"/>
                                            </xs:sequence>
                                        </xs:complexType>
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>
                        </xs:element>

                        <xs:element name="fechalanzamiento" type="xs:date"/>
                        <xs:element name="exito">
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element name="ventas">
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="numero" type="xs:integer"/>
                                                <xs:element name="mes" type="xs:string"/>
                                                <xs:element name="anno" type="xs:integer"/>
                                            </xs:sequence>
                                        </xs:complexType>
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:element>
</xs:schema>